    "version": "0.2.0",
    "configurations": [
    {
        "name": "(Windows) Launch",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/Debug/QINP.exe",
        "args": [ "-v", "-k", "-r", "-s", "-i=stdlib/", "examples/test.qnp" ],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "preLaunchTask": "build",
    },
        {
            "name": "(Unix) Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/QINP",
            "args": [ "-v", "-k", "-r", "-s", "-i=stdlib/", "examples/test.qnp" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        }
    ]
}