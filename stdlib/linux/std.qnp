\\ QINP Standard Library
\\ Linux Specific

import "syscall.qnp"

space std:
	define __STDIN 0
	define __STDOUT 1
	define __STDERR 2

	void exit(i32 status)!:
		__syscall(__SYS_EXIT, status)

	i32 print(u8 const* str, u64 len)!:
		return __syscall(__SYS_WRITE, __STDOUT, str, len)

	u8 getchar()!:
		u8 ch
		u64 result = __syscall(__SYS_READ, __STDIN, &ch, 1)
		return ch