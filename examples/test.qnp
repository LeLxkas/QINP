import "std.qnp"

pack User:
	u8 name[32]
	i64 age
	bool isMale

User makeUser(u8* name, i64 age, bool isMale):
	User user
	strcpy(user.name, name)
	user.age = age
	user.isMale = isMale
	return user

void printUser(User user):
	print("User:\n")
	print("  Name: ")
	print(user.name)
	print("\n")
	print("  Age: ")
	print(user.age)
	print("\n")
	print("  Sex: ")
	if user.isMale:
		print("male")
	else:
		print("female")
	print("\n")

User kavi = makeUser("Kevo", 16, true)
User lukas = makeUser("LeLxkas", 15, true)

printUser(kavi)
printUser(lukas = kavi)

void printInc():
	static u64 val = 10
	print(++val)
	print("\n")

u64 val = 10
while --val:
	printInc()